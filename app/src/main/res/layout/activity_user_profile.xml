<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/user_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/generic_picture"
        android:background="@android:color/darker_gray"
        android:clickable="true"
    />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:id="@+id/video_call_layout"
        android:background="@drawable/custom_button">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/video_call_icon"
            android:layout_alignParentRight="true"
            android:id="@+id/video_call_button"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/video_call_button"
            android:layout_alignBottom="@id/video_call_button"
            android:layout_alignParentTop="true"
            android:text="@string/video_call"
            android:textSize="@dimen/abc_text_size_large_material"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:id="@+id/video_call_text"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:id="@+id/audio_call_layout"
        android:background="@drawable/custom_button">


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/audio_call_icon"
            android:id="@+id/audio_call_button"
            android:layout_alignParentRight="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignRight="@id/audio_call_button"
            android:layout_alignBottom="@id/audio_call_button"
            android:text="@string/phone_call"
            android:textStyle="bold"
            android:textSize="@dimen/abc_text_size_large_material"
            android:id="@+id/phone_call_text"
            android:gravity="center_vertical"/>
        </RelativeLayout>


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:id="@+id/send_message_layout"
            android:background="@drawable/custom_button">


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/message_icon"
            android:layout_alignParentRight="true"
            android:id="@+id/send_message_button"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignRight="@+id/send_message_button"
            android:layout_alignBottom="@+id/send_message_button"
            android:text="@string/send_message"
            android:textStyle="bold"
            android:textSize="@dimen/abc_text_size_large_material"
            android:gravity="center_vertical"/>

    </RelativeLayout>


</LinearLayout>