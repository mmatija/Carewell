<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.matija_pc.carewell" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:largeHeap="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.example.matija_pc.carewell.UserProfileActivity"
            android:label="@string/title_activity_user_profile"
            android:parentActivityName="com.example.matija_pc.carewell.MainActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.matija_pc.carewell.MainActivity" />
        </activity>

        <activity android:name=".SearchableActivity"
            android:label="@string/title_activity_searchable">
        </activity>

        <activity android:name=".ComposeMessageActivity"
            android:label="@string/title_activity_compose_message"
            android:windowSoftInputMode="adjustResize"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>

            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable"/>

            <meta-data android:name="android.app.default_searchable"
                android:value=".ComposeMessageActivity"/>
        </activity>

        <activity android:name=".MessagesActivity"
            android:label="@string/title_activity_messages"
            android:windowSoftInputMode="adjustResize"/>

    </application>

</manifest>

